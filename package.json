{
    "name": "aula-top",
    "version": "1.0.0",
    "description": "uma aula sobre backend",
    "main": "src/common/infra/server.ts",
    "author": "manuel-antunes",
    "license": "MIT",
    "private": false,
    "scripts": {
        "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/common/infra/server.ts",
        "start": "node dist/server.js",
        "build": "tsc",
        "test": "jest",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.1",
        "@types/socket.io": "^3.0.2",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.31.0",
        "@typescript-eslint/parser": "^4.31.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.1.1",
        "prettier": "^2.4.0",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.5",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.4.2"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "socket.io": "^4.2.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "moduleDirectories": [
            "node_modules",
            "src"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
